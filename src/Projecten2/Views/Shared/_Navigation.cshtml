@if (SignInManager.IsSignedIn(User))
{
<nav>
    <div class="contain">
        <img src="/images/kairos_icon_white.png" class="logo" />
        <ul class="leftnav">
            <li><a asp-controller="Home" asp-action="Index">Overzicht</a></li>
            <li><a asp-controller="Home" asp-action="Archief">Archief</a></li>
            <li>
                <a>Help <i class="fa fa-caret-down"></i></a>
