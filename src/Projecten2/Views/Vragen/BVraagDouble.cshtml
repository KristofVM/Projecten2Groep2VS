@using System.Threading.Tasks
@model Projecten2.Models.ViewModels.BatenViewModels.BVraagDoubleViewModel

<main class="vragen">
    <div class="contain">
        <h1>@Model.VraagTekst</h1>
        <a asp-controller="Analyse" asp-action="kostenbaten" asp-route-id="@Model.AnalyseId" class="terug button"><i class="fa fa-arrow-left"></i> Terug</a>
        <div class="window">
            <form asp-controller="Vragen" asp-action="BVraagDouble" method="post">
                <input type="hidden" asp-for="AnalyseId" />
                <input type="hidden" asp-for="Vraag" />
                <div class="vak">
                    <label asp-for="Bedrag"></label>
                    <input asp-for="Bedrag" type="text" />
                </div>
                <button type="submit">Bevestig</button>
                <div class="clear"></div>
                <span asp-validation-for="Bedrag" class="alert"></span>
                <div class="clear"></div>
            </form>
        </div>
    </div>
</main>